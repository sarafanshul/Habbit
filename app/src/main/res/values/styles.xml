<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Divider">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:layout_marginLeft">20dp</item>
        <item name="android:layout_marginRight">20dp</item>
        <item name="android:background">@color/mat_black</item>
    </style>

    <style name="NewAlertDialogTheme" parent="ThemeOverlay.MaterialComponents.Dialog.Alert">
        <item name="buttonBarNegativeButtonStyle">@style/NegativeButtonStyle</item>
        <item name="buttonBarPositiveButtonStyle">@style/PositiveButtonStyle</item>
        <item name="buttonBarNeutralButtonStyle">@style/NeutralButtonStyle</item>
    </style>

    <style name="NegativeButtonStyle" parent="Widget.MaterialComponents.Button.TextButton.Dialog">
        <item name="android:textColor">?colorSecondary</item>
    </style>

    <style name="PositiveButtonStyle" parent="Widget.MaterialComponents.Button.TextButton.Dialog">
        <item name="android:textColor">?colorSecondary</item>
    </style>

    <style name="NeutralButtonStyle" parent="Widget.MaterialComponents.Button.TextButton.Dialog">
        <item name="android:textColor">?colorSecondary</item>
    </style>

    <style name="ProgressDialogStyle" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="colorAccent">@color/asphalt</item>
    </style>

    <style name="NewTabStyle" parent="Widget.MaterialComponents.TabLayout">
        <item name="android:textSize">16sp</item>
    </style>
    
    <style name="AsphaltButton" parent="ThemeOverlay.AppCompat">
        <item name="android:iconTint">@drawable/btn_selector_wet_asphalt</item>
    </style>

    <style name="CalendarViewCustomStyle">
        <item name="calendar_day_bar_weekend_text_color">@color/wet_asphalt</item>
        <item name="calendar_month_text_color">@color/mat_black</item>
        <item name="calendar_year_selection_arrows_color">@color/asphalt</item>
    </style>

</resources>