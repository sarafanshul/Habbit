<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Divider">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:layout_marginLeft">20dp</item>
        <item name="android:layout_marginRight">20dp</item>
        <item name="android:background">@color/light_grey</item>
    </style>

    <style name="DividerLight">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1px</item>
        <item name="android:background">@color/focused_color</item>
    </style>

    <style name="NewAlertDialogTheme" parent="ThemeOverlay.MaterialComponents.Dialog.Alert">
        <item name="buttonBarNegativeButtonStyle">@style/NegativeButtonStyle</item>
        <item name="buttonBarPositiveButtonStyle">@style/PositiveButtonStyle</item>
        <item name="buttonBarNeutralButtonStyle">@style/NeutralButtonStyle</item>
    </style>

    <style name="NegativeButtonStyle" parent="Widget.MaterialComponents.Button.TextButton.Dialog">
        <item name="android:textColor">?colorSecondary</item>
    </style>

    <style name="PositiveButtonStyle" parent="Widget.MaterialComponents.Button.TextButton.Dialog">
        <item name="android:textColor">?colorSecondary</item>
    </style>

    <style name="NeutralButtonStyle" parent="Widget.MaterialComponents.Button.TextButton.Dialog">
        <item name="android:textColor">?colorSecondary</item>
    </style>

    <style name="ProgressDialogStyle" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="colorAccent">@color/asphalt</item>
    </style>

    <style name="NewTabStyle" parent="Widget.MaterialComponents.TabLayout">
        <item name="android:textSize">16sp</item>
    </style>
    
    <style name="AsphaltButton" parent="ThemeOverlay.AppCompat">
        <item name="android:iconTint">@drawable/btn_selector_wet_asphalt</item>
    </style>

    <style name="CalendarViewCustomStyle">
        <item name="android:background">?colorOnPrimary</item>
        <item name="calendar_day_bar_weekend_text_color">?colorPrimary</item>
        <item name="calendar_month_text_color">?colorSecondary</item>
        <item name="calendar_date_background">@drawable/calendar_custom_date_bg_selector</item>
        <item name="calendar_date_text_color">@color/calendar_custom_date_text_selector</item>
        <item name="calendar_day_bar_background">?colorOnPrimary</item>
        <item name="calendar_day_bar_text_color">?colorSecondary</item>
        <item name="calendar_year_selection_arrows_color">?colorPrimaryVariant</item>
        <item name="calendar_grid_color">@android:color/transparent</item>
        <item name="calendar_year_selection_background">?colorOnPrimary</item>
        <item name="calendar_year_selection_text_color">?colorPrimary</item>
        <item name="calendar_grid_on_selected_dates">false</item>

    </style>

    <style name="roundedImageView">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>

    <style name="TimePickerTheme" parent="Theme.AppCompat.Light.Dialog">
        <item name="colorControlNormal">@color/md_blue_A400</item>
        <item name="colorControlActivated">@color/md_blue_A400</item>
        <item name="colorPrimary">@color/md_blue_A400</item>
        <item name="colorPrimaryDark">@color/md_blue_A400</item>
        <item name="colorAccent">@color/md_blue_A400</item>
    </style>

</resources>