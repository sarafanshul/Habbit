<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Habbit" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Disallow 'Force dark theme' -->
        <item name="android:forceDarkAllowed" tools:targetApi="Q">false</item>

        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/eerie_black</item>
        <item name="colorPrimaryVariant">@color/chinese_black</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/mat_black</item>
        <item name="colorSecondaryVariant">@color/diesel</item>
        <item name="colorOnSecondary">@color/white</item>
        <!-- Status bar color. -->
        <item name="android:windowLightStatusBar">true</item>
        <item name="android:statusBarColor" tools:targetApi="l">@color/white</item>
        <!-- Customize your theme here. -->

        <item name="fontFamily">@font/product_sans_font_family</item>

        <item name="colorOnColorOnPrimary">@color/asphalt</item>
    </style>

    <style name="Theme.Splash" parent="Theme.Habbit">

        <item name="android:windowBackground">@drawable/splash_screen</item>
        <item name="android:statusBarColor">@color/white</item>
        <item name="android:navigationBarColor">@color/white</item>

    </style>
</resources>