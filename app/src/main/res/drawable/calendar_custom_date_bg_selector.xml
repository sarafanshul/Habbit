<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto">

    <item android:state_pressed="true">
        <color android:color="@color/mat_black" />
    </item>

    <item app:calendar_state_selected="true">
        <color android:color="@color/wet_asphalt" />
    </item>

    <item app:calendar_state_today="true">
        <color android:color="@color/black" />
    </item>

    <item app:calendar_state_disabled="true">
        <color android:color="@color/custom_calendar_date_disabled_background" />
    </item>

    <item android:state_selected="true">
        <color android:color="@color/wet_asphalt" />
    </item>


</selector>